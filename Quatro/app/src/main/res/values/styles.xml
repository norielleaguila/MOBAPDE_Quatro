<resources>
    <style name="noTitle" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/colorAccent</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Search</item>
    </style>

    <style name="Rating" parent="Theme.AppCompat">

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#FFFFC53D</item>

    </style>
</resources>
