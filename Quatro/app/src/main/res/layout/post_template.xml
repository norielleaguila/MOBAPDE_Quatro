<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/actionTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reviewed Dr. Remedios de Dios Bulos"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:textColor="@color/colorGrey"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course:"
        android:textSize="18sp"
        android:textColor="@color/colorGrey"
        android:layout_marginLeft="-11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/actionTag"
        android:id="@+id/courseLbl" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NA"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/actionTag"
        android:id="@+id/course"
        app:layout_constraintLeft_toRightOf="@+id/courseLbl" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grade:"
        android:textSize="18sp"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/courseLbl"
        android:layout_marginLeft="-4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/gradeLbl"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NA"
        android:textSize="18sp"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        android:id="@+id/grade"
        app:layout_constraintLeft_toRightOf="@+id/gradeLbl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/course" />

</android.support.constraint.ConstraintLayout>