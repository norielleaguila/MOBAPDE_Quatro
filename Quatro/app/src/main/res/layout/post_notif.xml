<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notif_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        android:padding="16dp"
        android:id="@+id/linearLayout"
        android:layout_margin="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/notif_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Janella Marie Co"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:id="@+id/notif_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upped your"
                android:textColor="@color/colorGrey"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="5sp"
                android:id="@+id/notif_post"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/notif_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5m ago"
            android:textColor="@color/colorGrey"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#ff3c1e"
        android:backgroundTintMode="src_atop"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>