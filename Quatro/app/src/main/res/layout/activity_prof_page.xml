<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/femaleicon1"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Professor Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College | Department"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <RatingBar
            android:id="@+id/profPage_ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/colorLightGrey"
            android:progressTint="@color/colorStar"
            android:rating="3.5"
            android:stepSize="0.5"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVG. GRADE: 2.5"
            android:textAlignment="center"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses Taught:"
            android:textColor="@color/colorGrey"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ST-STAT, OPERSYS, INTRODB, ADVANDB, INTESYS, COMPILE"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View all related posts"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:backgroundTintMode="src_over"
            android:id="@+id/viewPostsBtn"
            />

    </LinearLayout>



    <include layout="@layout/navigation"></include>


</LinearLayout>